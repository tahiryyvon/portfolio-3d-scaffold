{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/angular",
      "options": {
        "outputPath": "apps/frontend/dist/portfolio-frontend"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/apps/api/src/main.ts" },
    { "source": "/(.*)", "destination": "/apps/frontend" }
  ]
}
